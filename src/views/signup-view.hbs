{{> welcome-menu id="signup"}}
{{> errors }}
{{#if error}}
  <div class="ui negative message">
  <div class="header">
    There was a problem...
  </div>
  <p>{{error}}</p>
  </div>
{{/if}}
<div class="ui two column grid basic middle aligned segment">
  <div class="column">
    <form class="ui stacked segment form" action="/register" method="POST"
          style="border: 3px solid black; border-radius: 10px; background-color: #DB65C6;">
      <h3 class="ui header" style="color: white;">Register</h3>
      <div class="two fields">
        <div class="field">
          <label style="color: white;">First Name</label>
          <input placeholder="First Name" type="text" name="firstname" 
          {{#if errors}}value={{user.firstname}}{{/if}}{{#if error}}value={{user.firstname}}{{/if}} autocomplete="off">
        </div>
        <div class="field">
          <label style="color: white;">Last Name</label>
          <input placeholder="Last Name" type="text" name="lastname" {{#if errors}}value={{user.lastname}}{{/if}}{{#if error}}value={{user.lastname}}{{/if}} autocomplete="off">
        </div>
      </div>
      <div class="field">
        <label style="color: white;">Email</label>
        <input placeholder="Email" type="text" name="email" {{#if errors}}value={{user.email}}{{/if}}{{#if error}}value={{user.email}}{{/if}} autocomplete="off">
      </div>
      <div class="field">
        <label style="color: white;">Password</label>
        <input placeholder="Password" type="password" name="password">
      </div>
      <button class="ui black submit button">Submit</button>
    </form>
    <div class="ui bottom attached warning message">
      <i class="icon help"></i>
      Already signed up? <a href="/login">Login here</a> instead.
    </div>
  </div>
</div>