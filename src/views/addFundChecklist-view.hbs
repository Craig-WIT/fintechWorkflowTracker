{{> menu id="dashboard"}}

<section class="ui segment" style="border: 3px solid black; border-radius: 10px; background-color: #DB65C6;">
  <h2 class="ui header" style="color: white;">
    Add/Sign Off Fund Checklist: {{fund.fundname}}
  </h2>
</section>

{{#if error}}
  <div class="ui negative message">
  <div class="header">
    Error
  </div>
  <p>{{error}}</p>
  </div>
  {{/if}}

{{> errors }}

<div class="ui two column grid basic segment">
  <div class="column">
    {{> addFundChecklist}}
  </div>
  <div class="column">
    {{> fundChecklistSummary}}
  </div>
</div>