{{> welcome-menu id='login' }}
{{> errors }}
{{#if error}}
  <div class="ui negative message">
  <div class="header">
    There was a problem...
  </div>
  <p>{{error}}</p>
  </div>
{{/if}}
<div class="ui two column middle aligned grid basic segment">
  <div class="column">
    <form class="ui stacked segment form" action="/authenticate" method="POST"
          style="border: 3px solid black; border-radius: 10px; background-color: #DB65C6;">
      <h3 class="ui header" style="color: white;">Log-in</h3>
      <div class="field">
        <label style="color: white;">Email</label> <input placeholder="Email" name="email" {{#if errors}}value={{email}}{{/if}}{{#if error}}value={{email}}{{/if}} autocomplete="off">
      </div>
      <div class="field">
        <label style="color: white;">Password</label> <input placeholder="Password" type="password" name="password">
      </div>
      <button class="ui black submit button">Login</button>
    </form>
  </div>
</div>