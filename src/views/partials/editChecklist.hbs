<form class="ui stacked segment form" action="/checklistAdmin/editChecklist/{{checklist._id}}" method="POST"
      style="background-color: #F5C0EF; border: 3px solid black;">
  <div class="field">
    <label>Is checklist header item?</label>
    <input type="checkbox" name="checklistheader">
    <label>Add dates for Checklist</label>
      <label>Start date</label>
      <div class="ui calendar" id="rangestart">
        <div class="ui input left icon">
          <i class="calendar icon"></i>
          <input type="text" placeholder="Start" name="startdate" autocomplete="off">
        </div>
      </div>
      <label>End date</label>
      <div class="ui calendar" id="rangeend">
        <div class="ui input left icon">
          <i class="calendar icon"></i>
          <input type="text" placeholder="End" name="enddate" autocomplete="off">
        </div>
      </div>
    <label>Add Checklist Item</label>
    <input type="text" name="checklistitem">
    <label>Default Value</label>
    <div class = "font-awesome">
      <select class="fa" name="defaultvalue" class="ui fluid dropdown" id="defaultvalue">
      <option class="fa" value="Checked">&#xf00c</option>
      <option value="N/A">N/A</option>
    </select>
    </div>
  </div>
  <button id="submitButton" class="tiny ui black submit animated button">
    <div class="visible content">Add Checklist Item</div>
    <div class="hidden content">Are you sure?</div>
  </button>
</form>
<button id="backButton" class="tiny ui gray submit button">
    <div class="visible content"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</div>
</button>

<section class="ui raised segment">
    <h2>Add Checklist Items via Excel</h2>
    <div>
        Download the Excel template file from here:
        <button style="margin-left: 20px" class="ui pink button" onclick="document.getElementById('link').click()" >
            <i class="download icon"></i>
            Download
        </button>
        <a id="link" href="https://res.cloudinary.com/dtf6gxvaq/raw/upload/v1679756460/addChecklistTemplate_civsbt.xlsx" download hidden></a>
    </div>
    <br/>
    <div>
        Upload a completed Checklist Item template here:
        <div >
            <br>
            <form class="ui form" action="/checklistAdmin/editChecklistExcel/{{checklist._id}}" method="POST"
                  enctype="multipart/form-data">
                <div class="field">
                    <input type="file" class="input" name="excelfile"
                           accept="text/plain, .csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel">
                </div>
                <button type="submit" value="Upload" class="ui pink button">Upload</button>
            </form>
        </div>
    </div>
</section>

<script>
  $('#defaultvalue').dropdown();
  .font-awesome .fa {
    font-family:monospace;
  };
</script>

<script>
  document.getElementById("backButton").onclick = function () {
      window.location.href = "/checklistAdmin";
  };
</script>

<script>
$('#rangestart').calendar({
  type: 'date',
  endCalendar: $('#rangeend')
});
$('#rangeend').calendar({
  type: 'date',
  startCalendar: $('#rangestart')
});
</script>