<form class="ui stacked segment form" action="/userAdmin/editUser/{{user._id}}" method="POST"
      style="background-color: #C9E5F0; border: 3px solid white;">
  <div class="field">
    <label>Change First Name</label>
    <input placeholder="{{user.firstname}}" type="text" name="firstname">
    <label>Last Name</label>
    <input placeholder="{{user.lastname}}" type="text" name="lastname">
    <label>Email</label>
    <input placeholder="{{user.email}}" type="text" name="email">
    <label>Password</label>
    <input placeholder="{{user.password}}" type="password" name="password">
    <label>Role</label>
    <select name="role" class="ui fluid dropdown" id="role">
    <option value="">Select role</option>
      <option value="Preparer">Preparer</option>
      <option value="Reviewer">Reviewer</option>
    </select>
    <label>Teams</label>
    <select name="teams" multiple="" class="ui fluid dropdown" id="teams">
    <option value="">Add Team(s)</option>
    {{#each teams}}
        <option value={{_id}}>{{name}}</option>
    {{/each}}
    </select>
  </div>
  <button id="submitButton" class="tiny ui blue submit animated button">
    <div class="visible content">Edit User</div>
    <div class="hidden content">Are you sure?</div>
  </button>
</form>

<script>
    $('#teams').dropdown();
    $('#role').dropdown();
</script>