<div class="ui two column grid basic segment">
<div class="column">
<div class="ui segment" style="border: 3px solid #043F8C;">
    <div class="card" id="cardStyle"><h2>{{fundname}}</h3>
    </div>
    <div class="card" id="cardStyle"><h4>Year End</h2>
      {{yearend}}
    </div>
    <br>
    <a href="/{{teamid}}/viewFund/{{_id}}/addFundChecklist">
        <div id="addButton" class="tiny black ui animated button" tabindex="0">
            <div class="visible content">Add/View Checklists</div>
            <div class="hidden content">Are you sure?</div>
        </div>
    </a>
</div>
<button id="backButton" class="tiny ui gray submit button">
    <div class="visible content"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</div>
</button>
</div>
<div class="column">
   <div class="ui segment" style="border: 3px solid #043F8C;">
  <canvas id="{{_id}}" style="width:100%;max-width:700px"></canvas>
    </div>
</div>
</div>
<br>

<script>
var xValues = ["Complete","Incomplete"];
var yValues = [100,45];
var barColors = [
  "#b91d47",
  "#00aba9",
  "#2b5797",
  "#e8c3b9",
  "#1e7145"
];

new Chart("{{{_id}}}", {
  type: "doughnut",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    title: {
      display: true,
      text: "{{{fundname}}} Checklist Summary"
    }
  }
});

    $('#type').dropdown();

    document.getElementById("backButton").onclick = function () {
        window.location.href = "/dashboard";
    };
</script>