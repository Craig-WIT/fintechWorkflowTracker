<div class="ui two column grid basic segment">
<div class="column">
<div class="ui segment" style="border: 3px solid #043F8C;">
    <div class="card" id="cardStyle"><h2>{{teamname}}</h3>
    </div>
    <div class="card" id="cardStyle"><h4>Location</h2>
      {{location}}
    </div>
    <div class="card" id="cardStyle"><h4>Fund(s)</h2>
    {{#each funds}}
      <li>{{fundname}}</li>
    {{/each}}
    </div>
<br>
<a href="/dashboard/{{_id}}/viewTeam">
  <div id="addButton" class="tiny red ui animated button" tabindex="0">
      <div class="visible content">View Funds</div>
      <div class="hidden content">Are you sure?</div>
  </div>
</a>
</div>
</div>
<div class="column">
  <div class="ui segment" style="border: 3px solid #043F8C;">
  <canvas id="{{_id}}" style="width:100%;max-width:700px"></canvas>
  </div>
</div>
</div>
<br>
</div>

<script>
var xValues = ["Complete","Incomplete"];
var yValues = [100,45];
var barColors = [
  "#b91d47",
  "#00aba9",
  "#2b5797",
  "#e8c3b9",
  "#1e7145"
];

new Chart("{{{_id}}}", {
  type: "doughnut",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    title: {
      display: true,
      text: "{{{teamname}}} Checklist Summary"
    }
  }
});
</script>