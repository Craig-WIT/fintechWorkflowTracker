<form class="ui stacked segment form" action="/userAdmin/addUser" method="POST"
      style="background-color: #F5C0EF; border: 3px solid black;">
  <div class="field">
    <label>First Name</label>
    <input placeholder="First name" type="text" name="firstname" {{#if form}}value="{{form.firstname}}"{{/if}}>
    <label>Last Name</label>
    <input placeholder="Last name" type="text" name="lastname" {{#if form}}value="{{form.lastname}}"{{/if}}>
    <label>Email</label>
    <input placeholder="Email" type="text" name="email" {{#if form}}value="{{form.email}}"{{/if}}>
    <label>Password</label>
    <input placeholder="Password" type="password" name="password" {{#if form}}value="{{form.password}}"{{/if}}>
    <label>Role</label>
    <select name="role" class="ui fluid dropdown" id="role">
    <option value="">Select role</option>
      <option value="Preparer" {{#eq form.role "Preparer"}}selected="selected"{{/eq}}>Preparer</option>
      <option value="Reviewer" {{#eq form.role "Reviewer"}}selected="selected"{{/eq}}>Reviewer</option>
    </select>
    <label>Is Admin?</label>
    <select name="admin" class="ui fluid dropdown" id="admin">
    <option value="">Is Admin?</option>
      <option value="Yes" {{#eq form.admin "Yes"}}selected="selected"{{/eq}}>Yes</option>
      <option value="No" {{#eq form.admin "No"}}selected="selected"{{/eq}}>No</option>
    </select>
    <label>Teams</label>
    <select name="teams" multiple="" class="ui fluid dropdown" id="teams">
    <option value="">Add Team(s)</option>
    {{#each teams}}
        <option value={{_id}}>{{teamname}}</option>
    {{/each}}
    </select>
  </div>
  <button id="submitButton" class="tiny ui black submit animated button">
    <div class="visible content">Add User</div>
    <div class="hidden content">Are you sure?</div>
  </button>
</form>

<section class="ui raised segment">
    <h2>Create Users via Excel</h2>
    <div>
        Download the Excel template file from here:
        <button style="margin-left: 20px" class="ui pink button" onclick="document.getElementById('link').click()" >
            <i class="download icon"></i>
            Download
        </button>
        <a id="link" href="https://res.cloudinary.com/dtf6gxvaq/raw/upload/v1679756460/addUserTemplate_a7xcyo.xlsx" download hidden></a>
    </div>
    <br/>
    <div>
        Upload a completed User template here:
        <div >
            <br>
            <form class="ui form" action="/userAdmin/addUserExcel" method="POST"
                  enctype="multipart/form-data">
                <div class="field">
                    <input type="file" class="input" name="excelfile"
                           accept="text/plain, .csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel">
                </div>
                <button type="submit" value="Upload" class="ui pink button">Upload</button>
            </form>
        </div>
    </div>
</section>

<script>
    $('#teams').dropdown();
    $('#role').dropdown();
    $('#admin').dropdown();
</script>