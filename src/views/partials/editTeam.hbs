<form class="ui stacked segment form" action="/teamAdmin/editTeam/{{team._id}}" method="POST"
      style="background-color: #F5C0EF; border: 3px solid black;">
  <div class="field">
    <label>Team Name</label>
    <input value="{{team.teamname}}" type="text" name="teamname">
    <label>Location</label>
    <select name="location" class="ui fluid dropdown" id="location">
      <option value="">Select Location</option>
      <option value="Dublin" {{#eq team.location "Dublin"}}selected="selected"{{/eq}}>Dublin</option>
      <option value="Luxembourg" {{#eq team.location "Luxembourg"}}selected="selected"{{/eq}}>Luxembourg</option>
      <option value="New Jersey" {{#eq team.location "New Jersey"}}selected="selected"{{/eq}}>New Jersey</option>
      <option value="Bermuda" {{#eq team.location "Bermuda"}}selected="selected"{{/eq}}>Bermuda</option>
      <option value="Philippines" {{#eq team.location "Philippines"}}selected="selected"{{/eq}}>Philippines</option>
    </select>
    <label>Department</label>
    <select name="department" class="ui fluid dropdown" id="department">
      <option value="">Select Department</option>
      <option value="FA" {{#eq team.department "FA"}}selected="selected"{{/eq}}>Fund Accounting</option>
      <option value="PE" {{#eq team.department "PE"}}selected="selected"{{/eq}}>Private Equity</option>
      <option value="CS" {{#eq team.department "CS"}}selected="selected"{{/eq}}>Corporate Services</option>
      <option value="IA" {{#eq team.department "IA"}}selected="selected"{{/eq}}>Risk and Audit</option>
      <option value="IS" {{#eq team.department "IS"}}selected="selected"{{/eq}}>Investor Services</option>
    </select>
    <label>Funds</label>
    <select name="funds" multiple="" class="ui fluid dropdown" id="funds">
    <option value="">Add Fund(s)</option>
    {{#each funds}}
        <option value={{_id}}>{{fundname}}</option>
    {{/each}}
    </select>
  </div>
  <button id="submitButton" class="tiny ui black submit animated button">
    <div class="visible content">Edit Team</div>
    <div class="hidden content">Are you sure?</div>
  </button>
</form>
<button id="backButton" class="tiny ui gray submit button">
    <div class="visible content"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</div>
</button>

<script>
  $('#funds').dropdown();
  $('#location').dropdown();
  $('#department').dropdown();

  document.getElementById("backButton").onclick = function () {
        window.location.href = "/teamAdmin";
    };
</script>