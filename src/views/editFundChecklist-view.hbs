{{> menu id="dashboard"}}

<section class="ui segment" style="border: 3px solid black; border-radius: 10px; background-color: #DB65C6;">
  <h2 class="ui header" style="color: white;">
    {{fund.fundname}}: {{fundchecklist.checklistname}} - {{fundchecklist.checklistdate}}
  </h2>
</section>

{{#if error}}
  <div class="ui negative message">
  <div class="header">
    Error
  </div>
  <p>{{error}}</p>
  </div>
{{/if}}

{{> errors }}

  <div class="column">
    {{> editFundChecklist}}
  </div>

  <script>
    $('.negative.message .close')
  .on('click', function() {
    $(this)
      .closest('.message')
      .transition('fade')
    ;
  })
;
  </script>